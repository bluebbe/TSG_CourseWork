@model CarDealership.Model.ViewModel.InventoryReportsVM
@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory Report</h2>

<div>
    <h3>New Vehicles</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Count</th>
                <th>Stock Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.New)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>@item.Count</td>
                    <td>@item.StockValue</td>

                </tr>

            }
      </tbody>
    </table>
</div>





<div>
    <h3>Used Vehicles</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Count</th>
                <th>Stock Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Used)
            {
                <tr>
                    <td>@item.Year</td>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>@item.Count</td>
                    <td>@item.StockValue</td>

                </tr>

            }
        </tbody>
    </table>
</div>