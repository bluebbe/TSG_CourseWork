@model CarDealership.Model.ViewModel.ModelMakeViewModel
@{
    ViewBag.Title = "Models";
}

<h2>Models</h2>
<div class="row" style="border:solid;padding:10px">
    <form action="/admin/models" method="post" class="form-inline">
        <div class="form-group col-md-5">
            <label class="control-label" for="model">New Model</label>
            <input type="text" class="form-control" id="model" placeholder="" name="model" style="width:80%">

        </div>
        <div class="form-group col-md-4">
            <label class="control-label" for="modelMake">Make</label>

            <select id="make" name="make" class="form-control" style="width:100%">
                @foreach (var item in Model.MakeList)
                {
                    <option id="@item.MakeId">@item.MakeName</option>

                }



            </select>
        </div>
        <div class="form-group col-md-1">
            <button id="addModel" type="submit" class="btn btn-primary">Save</button>
        </div>

    </form>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Date Added</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ModelList)
                {
                    <tr>
                        <td>@item.MakeName</td>
                        <td>@item.ModelName</td>
                        <td>@item.Created.ToString("MM/dd/yyyy")</td>
                        <td>@item.User</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
